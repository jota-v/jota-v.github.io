.hamburger {
  position: relative;
  z-index: 1;
  display: none;
  width: 26px;
  height: 16px;

  .mobile & {
    display: block
  }
}

.hamburger span {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 2px;
  margin-top: -1px;
  background: #fff;
  border-radius: 10px;
}

.hamburger span:first-child {
  animation: line-1-back 250ms linear both
}

.hamburger span:nth-child(2) {
  top: 50%;
  transition: opacity 95ms linear;
}

.hamburger span:last-child {
  top: 100%;
  animation: line-3-back 250ms linear both
}

.nav--on .hamburger {
  span:first-child {
    animation: line-1 250ms linear both
  }

  span:nth-child(2) {
    opacity:0
  }

  span:last-child {
    animation: line-3 250ms linear both
  }
}

@keyframes line-1 {

  40% {
    transform: translateY(8px)
  }

  60% {
    transform: translateY(8px)
  }

  100% {
    transform: translateY(8px) rotate(45deg)
  }
}

@keyframes line-1-back {
  0% {
    transform: translateY(8px) rotate(45deg)
  }
  50% {
    transform: translateY(8px)
  }
  100% {
    transform: translateY(0)
  }
}

@keyframes line-3 {
  40% {
    transform: translateY(-8px)
  }

  60% {
    transform: translateY(-8px)
  }

  100% {
    transform: translateY(-8px) rotate(-45deg)
  }
}

@keyframes line-3-back {
  0% {
    transform: translateY(-8px) rotate(-45deg)
  }
  50% {
    transform: translateY(-8px)
  }
  100% {
    transform: translateY(0)
  }
}
