.nav {
  top: 0;
  left: 0;
  width: 100%;
  height: 65px;
  font: 18px/65px $Ff-secondary;
  color: $grey-f;
}

.nav-logo {

}

.nav-btn {
  display: none;
}

.navMenu {
  display: block;
}

.navMenu-item {
  display: inline-block;
  margin-left: 20px;
}

.navMenu-item > a {
  font-size: 13px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: $grey-f;

  .active & {
    color: $grey-4;
  }
}

.navMenu-icon {
  font-size: 21px;
}
