.nav {
  top: 0;
  left: 0;
  width: 100%;
  height: 65px;
  font: 18px/65px $Ff-secondary;
  color: $grey-f;
}

.nav-logo {

}

.nav-btn {
  display: none;
}

.nav-menu {
  display: block;
}

.nav-menu > li {
  display: inline-block;
  margin-left: 15px;
}

.nav-menu > li > a {
  font-size: $Fz-base;
  text-transform: uppercase;
  color: $grey-f;

  .active & {
    color: $brandMain;
  }
}
