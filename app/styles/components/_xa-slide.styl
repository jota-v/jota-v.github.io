.xaSlide {
  width: 100%;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}

.xaSlide-container {
  display: table;
}

.xaSlide-item {
  display: table-cell;
  min-width: 90px;
  text-align: center;
  padding: 5px 18px;
  vertical-align: middle;
}

.xaSlide-item:first-child {
  padding-left: 0;
}

.xaSlide-item:last-child {
  padding-right: 0;
}
