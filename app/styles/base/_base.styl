body {
  font-family: fontFamilyPrimary;
  font-size: 100%;
  line-height: 1.5;
  color: gray400;
  background: gray1020;
}

p {
  font-size: 0.95em;
  letter-spacing: 1px;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  line-height: 1.3;
}

@keyframes heroPop {
  0% {
    transform: scale(0.01);
    border-radius: 50%;
    transform: translate3d(0,-10px,0);
  }
  100% {
    transform: scale(1);
    border-radius: 0;
    transform: translate3d(0,0,0);
  }
}

.hero {
  // animation heroPop 1s ease-out both;
}

.fade-in-appear {
  opacity: 0.01;
}

.fade-in-appear.fade-in-appear-active {
  opacity: 1;
  transition: opacity 500ms ease-out;
}

.fade-in-leave {
  opacity: 1;
}

.fade-in-leave.fade-in-leave-active {
  opacity: 0;
  transition: opacity 500ms ease-in;
}
