.nav {
  top:0;
  background: transparent;
  backface-visibility: hidden;
}

.nav,
.nav-logo,
.nav-btn {
  transition: all 300ms ease;
}

.nav-logo:hover {
  color: #fff
}

.nav.active {
  background: rgba(255,255,255,.97);
  color: $grey-4;
  box-shadow: 0 1px 5px rgba(0,0,0,.3);
}

.nav.active .nav-logo {
  color: $brandMain;
}

.nav.active .nav-btn span {
  background: $grey-4;
}

.nav--on.active .nav-btn span {
  background: #fff;
  transition: background 300ms 300ms
}

.nav-overlay {
  display: none
}

.mobile .nav-overlay {
  position: fixed
  top: 0
  left: -100%
  display: block
  width: 100%
  height: 100%
  text-align right
  color: #fff
  background: alpha(#043262,96%)
  -webkit-backface-visibility: hidden

  .nav-menu {
    position: absolute;
    width: 100%
    top: 50%
    padding: 0 25px
    transform: translateY(-55%)
  }

  a {
    color: #fff
    font-size: $Fz-xlg
  }

  .navMenu-item > ul {
    margin: 0 auto;
  }

  .navMenu-item--logo {
    float: left
    padding: 10px
    margin-top: 10px
    font-size: $Fz-lg
    border-top: 1px solid rgba(255,255,255,.5)
  }

  .navMenu-item:not(.navMenu-item--logo) {
    animation: link-out 90ms ease-out both
    animation-delay: 30ms
  }

  &.on {
    animation: drawer-out 250ms cubic-bezier(0.49, 0.10999, 0.65, 0.19999)
  }

  &.on.open {
    left: 0
    animation: drawer-in 300ms cubic-bezier(0.55, 0.055, 0.675, 0.19) both

    .navMenu-item:not(.navMenu-item--logo) {
      animation: link-in 350ms ease-out both
      animation-delay: 290ms
    }
  }
}

@keyframes drawer-in {
  0% {
    transform: translateX(-100%)
  }

  100% {
    transform: translateX(0)
  }
}

@keyframes drawer-out {
  0% {
    transform: translateX(100%)
  }

  100% {
    transform: translateX(0)
  }
}

@keyframes link-in {
  0% {
    transform: translateX(-180px)
  }
  45% {
    transform: translateX(35px)
  }
  75% {
    transform: translateX(-10px)
  }
  to {
    transform: translateX(0)
  }
}

@keyframes link-out {
  0% {
    transform: translateX(0)
  }
  to {
    transform: translateX(15px)
  }
}
