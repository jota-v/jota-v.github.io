.nav {
  top: 0
  left: 0
  width: 100%
  height: 65px
  font: 18px/65px $Ff-secondary
  color: $grey-f
}

.nav-logo {
  position: relative
}

.nav-btn {
  display: none
}

.navMenu {
  display: block
}

.navMenu-item {
  display: inline-block
  margin-left: 20px
}

.navMenu-item > a {
  position: relative
  font-size: 13px
  font-weight: 700
  letter-spacing: 1px
  text-transform: uppercase
  color: $grey-f

  .active & {
    color: $grey-4
  }
}

.navMenu-item:not(.navMenu-item--logo) > a:hover,
.nav-logo:hover {
  &:after {
    position: absolute
    top:50%
    left: 0
    z-index: 1
    width: 100%
    height: 2px
    margin-top: -1px
    background: #fff
    content: ""
  }
}

.nav-logo:hover:after {
  height: 3px
}

.navMenu-icon {
  font-size: 21px;
}

.nav.active {
  & .navMenu-item > a:hover:after {
    background: $grey-4
  }
  & .nav-logo:hover:after {
    background: $brandMain
  }
}
