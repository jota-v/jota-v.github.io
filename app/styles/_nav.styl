.nav {
  top:0;
  background: $brandMain;
  backface-visibility: hidden;
}

.nav,
.nav-logo,
.nav-btn {
  transition: all 300ms ease;
}

.nav.active {
  background: #fff;
  color: $grey-4;
  box-shadow: 0 2px 6px rgba(0,0,0,.25);
}

.nav.active .nav-logo {
  color: $brandMain;
}

.nav.active .nav-btn span {
  background: $grey-4;
}
