.nav {
  font: 14px var(--Ff-secondary);
  background: var(--brandMain);
  backface-visibility: hidden;
}

.nav,
.nav-logo,
.nav-btn {
  transition: all 300ms ease;
}

.nav.active {
  background: $grey-f;
  color: $brandMain;
  box-shadow: 0 2px 6px rgba(0,0,0,.25);
}

.nav.active .nav-logo {
  color: $brandMain;
}

.nav.active .nav-btn span{
  background: $brandMain;
}
