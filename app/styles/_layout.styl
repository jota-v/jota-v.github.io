.container {
    max-width: 1100px;
    padding: 0 $gutter;
    margin: 0 auto;

    &--cols {
      padding: 0;
      @extend .u-clearfix;
    }
}

.section {
  padding-top: 50px;
  padding-bottom: 50px;
  background: $grey-f;
}

.section--negative {
  color: $grey-f;
  background: $grey-2;
}

.col {
  padding-left: $gutter;
  padding-right: $gutter;
}
